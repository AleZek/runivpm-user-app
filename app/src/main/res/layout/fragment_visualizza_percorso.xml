<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".percorso.SelezionaMappaFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_container_visualizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/status_bar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/floor_button_145_visualizza"
                android:layout_width="55dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Quota 145"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/floor_button_150_visualizza"
                android:layout_width="55dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Quota 150"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/floor_button_155_visualizza"
                android:layout_width="55dp"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Quota 155"
                android:textColor="@color/colorWhite" />


        </LinearLayout>


    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_container_visualizza">

        <com.ids.idsuserapp.percorso.views.MapView
            android:id="@+id/navigation_map_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_place_blue_48dp" />


    </RelativeLayout>

</RelativeLayout>