<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/autenticationactivitycontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".autentication.AutenticationFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_above="@+id/textView"
                android:src="@mipmap/ic_launcher_google_play" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:text="RUNIVPM ti dà il benvenuto"
                android:textAlignment="center"
                android:textColor="#B30000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="232dp"
                android:text="Il modo migliore per affontare in sicurezza le emergenze nella tua università"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="103dp"
                android:backgroundTint="#ffffff"
                android:text="REGISTRATI"
                android:textColor="#B30000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="76dp"
                android:text="Hai già un account RUNIVPM?"
                android:textSize="12sp" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp"
                android:backgroundTint="#ffffff"
                android:text="LOGIN"
                android:textColor="#B30000" />

            <Button
                android:id="@+id/offline_btn"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="170dp"
                android:text="Uso offline"
                android:backgroundTint="#ffffff"
                android:textSize="12sp"
                android:textColor="#B30000" />
        </RelativeLayout>


    </android.support.constraint.ConstraintLayout>
