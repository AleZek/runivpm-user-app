<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ids.idsuserapp.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/standard_elevation"
            android:clipToPadding="false"
            >

            <!-- Helper views to achieve animation -->
            <View
                android:id="@+id/reveal_background_view"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:elevation="1dp">
            </View>

            <View
                android:id="@+id/reveal_view"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:elevation="1dp">
            </View>
            <!-- End helper views -->

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-4dp"
                android:layout_marginStart="-4dp"
                android:background="@android:color/transparent"
                android:elevation="1dp"
                android:paddingTop="@dimen/status_bar_height">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/navigation_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:title="@string/title_activity_navigation">

                    <TextView
                        android:id="@+id/navigation_toolbar_textview_title"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_activity_navigation"
                        android:textColor="@android:color/white"/>

                </android.support.v7.widget.Toolbar>

                <include
                    android:id="@+id/scegli_da_mappa"
                    layout="@layout/scegli_da_mappa" />

                <include
                    android:id="@+id/scegli_da_beacon"
                    layout="@layout/scegli_da_beacon"/>

            </android.support.design.widget.AppBarLayout>
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>