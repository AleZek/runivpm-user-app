<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ids.idsuserapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BeaconList"
            android:label="@string/title_activity_beacon_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".LogoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BeaconNavigationActivity" />
        <activity
            android:name=".authentication.AutenticationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".authentication.LoginActivity"
            android:noHistory="true" />
        <activity android:name=".authentication.RegistrationActivity"
            android:noHistory="true"
            />
        <service
            android:name=".services.LocatorService"
            android:enabled="true"
            android:exported="true" />
        <service android:name=".services.RunivpmFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".services.RunivpmFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".PercorsoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".percorso.NavigationActivity" />
        <activity
            android:name=".StopEmergencyActivity"
            android:label="@string/title_activity_stop_emergency"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true">

        </activity>
    </application>

</manifest>